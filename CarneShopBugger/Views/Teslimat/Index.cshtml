
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<style>
/* Process Sections */
        .process-section {
            padding: 80px 0;
            position: relative;
        }

        .process-section:nth-child(odd) {
            background: #fff;
        }

        .process-section:nth-child(even) {
            background: #f8f9fa;
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-number {
            display: inline-block;
            background: linear-gradient(135deg, #c41e3a, #e74c3c);
            color: #fff;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            font-size: 32px;
            font-weight: 700;
            line-height: 80px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(196, 30, 58, 0.3);
        }

        .section-title {
            font-size: 36px;
            color: #333;
            margin-bottom: 15px;
            font-weight: 700;
        }

        .section-description {
            font-size: 18px;
            color: #666;
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.7;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .media-item {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }

        .media-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
        }

        .media-placeholder {
            height: 250px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #666;
            font-size: 48px;
            position: relative;
        }

        .video-placeholder {
            background: linear-gradient(135deg, #e9ecef, #dee2e6);
            position: relative;
        }

        .video-placeholder::after {
            content: '▶';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 60px;
            color: #c41e3a;
            opacity: 0.8;
        }

        .media-caption {
            padding: 25px 20px;
            text-align: center;
        }

        .media-caption h4 {
            font-size: 18px;
            color: #333;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .media-caption p {
            color: #666;
            font-size: 14px;
            margin: 0;
        }

        /* Responsive */
@@media (max-width: 768px) {
            .section-title {
                font-size: 28px;
            }

            .section-description {
                font-size: 16px;
            }

            .media-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }
</style>
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Process Sections</title>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Rubik', sans-serif;
            line-height: 1.6;
            color: #333;
            overflow-x: hidden;
        }

        .auto-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Process Sections */
        .process-section {
            padding: 80px 0;
            position: relative;
        }

            .process-section:nth-child(odd) {
                background: #fff;
            }

            .process-section:nth-child(even) {
                background: #f8f9fa;
            }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-number {
            display: inline-block;
            background: linear-gradient(135deg, #c41e3a, #e74c3c);
            color: #fff;
            width: 80px;
            height: 80px;
            border-radius: 50%;
            font-size: 32px;
            font-weight: 700;
            line-height: 80px;
            margin-bottom: 20px;
