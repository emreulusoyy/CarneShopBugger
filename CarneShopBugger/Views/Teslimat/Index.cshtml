        }

        .media-item {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }

            .media-item:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            }

        .media-placeholder {
            height: 250px;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #666;
            font-size: 48px;
            position: relative;
            overflow: hidden;
        }

            /* Fotoğraf stilleri */
            .media-placeholder img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                transition: transform 0.3s ease;
            }

        .media-item:hover .media-placeholder img {
            transform: scale(1.1);
        }

        /* Fotoğraf yüklenene kadar gösterilecek placeholder */
        .photo-placeholder {
            background: linear-gradient(135deg, #f1f3f4, #e8eaed);
            border: 2px dashed #c1c7cd;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-size: 14px;
            color: #5f6368;
        }

            .photo-placeholder .icon {
                font-size: 40px;
                margin-bottom: 10px;
            }

        .video-placeholder {
            background: linear-gradient(135deg, #e9ecef, #dee2e6);
            position: relative;
        }

            .video-placeholder::after {
                content: '▶';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 60px;
                color: #c41e3a;
                opacity: 0.8;
                z-index: 2;
            }

        .media-caption {
            padding: 25px 20px;
            text-align: center;
        }

            .media-caption h4 {
                font-size: 18px;
